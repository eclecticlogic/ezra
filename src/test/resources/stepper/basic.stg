
simple() ::= <<
    function Simple {
        @Label("xyz") a = "Hello World";
    }
>>

annotationName() ::= <<
    @Comment("this is a comment")
    @TimeoutSeconds(3600)
    @Version("1.0")
    function AnnotationTest {
        c = 5;
    }
>>

assignmentPrimitive() ::= <<
    function assignment {
        @Label("abc") a = 5.2;
        b = 10;
        c = "Hello World";
        d.e.f = true;
        @Label("xyz") e.f.g = false;
    }
>>

assignmentComplex() ::= <<
    function complex {
        value1 = a * b + c.calc(e) - d.length();
        @Label("one") value2 += a * b + c.calc(e) - d.length();
        value3 -= a * b + c.calc(e) - d.length();
        value4 /= a * b + c.calc(e) - d.length();
        @Label("two") value5 *= a * b + c.calc(e) - d.length();
    }
>>

assignmentJson() ::= <<
    function json {
        @Label("xyz") value = {
            "a": 5,
            "b": 10,
            "c": {
                "d": "x"
            },
            "e": ["p", true, false]
        }
    }
>>

assignmentJsonArray() ::= <<
    function array {
        @Label("xyz") value = ["p", true, false, 2.5, 10]
    }
>>

assignmentTask() ::= <<
    function mytask {
        @Label("x")
        value = task {
            "a": "b"
        }
    }
>>

task() ::= <<

    function mytask {
        @RetryOnError("abc", "def") { "IntervalSeconds": 3, "MaxAttempts": 4, "BackoffRate": 5 }
        @RetryOnError("pqr") { "IntervalSeconds": 6 }
        @Label("hello")
        task {
            "a": "b"
        }
    }
>>